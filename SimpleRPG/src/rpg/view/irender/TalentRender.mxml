<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<fx:Script> 
		<![CDATA[ 
			
			override public function set data(value:Object):void { 
				super.data = value; 
				
				// Check to see if the data property is null. 
				if (value== null) 
					return; 
				// If the data property is not null, 
				// set the Label controls appropriately. 
				if (value.learned){
					btn.setStyle("color",0x000000);
					btn.setStyle("chromeColor",0xff9663);
					
					trace("learned."+data.learned)
				}else{
					btn.setStyle("color",0x999999);
					btn.setStyle("chromeColor",0xBCBCBC);
					
				}
			} 
		]]> 
	</fx:Script> 

	<!--<s:Label id="lb" text="{data}" />-->
	<s:Button id="btn" width="10" height="20" label="{label}" color="0x999999" chromeColor="#BCBCBC" fontSize="12"
			  skinClass="rpg.skin.TalentSkin" />  
</s:ItemRenderer>
